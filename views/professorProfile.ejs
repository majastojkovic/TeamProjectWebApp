<div class="container">

<div class="row">
<div class="col-md-5 mr-auto">
  <form action="/professor/deleteTheme" method="POST">
    <h3><strong>List of themes</strong></h3>
    <br>
    <table id="professorThemesTable" class="table table-hover">
      <thead>
        <% let headers = ['Title', '']; %>
        <% headers.forEach(headerText => { %>
        <th scope="col"><%= headerText %></th>
        <% }); %>
      </thead>
      <tbody>
        <% themes.forEach(function(theme) { %>
        <tr class="table-light">
          <td><a href="/professor/theme/<%=theme.title %>"><%= theme.title %></a></td>
          <td><button type="submit" class="btn btn-outline-primary" name="button" value="<%= theme.title %>">Delete</button></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </form>
</div>

<div class="col-md-5 ml-auto">
  <h3><strong>List of requires</strong></h3>
  <br>
  <table id="professorRequiresTable" class="table table-hover">
    <thead>
      <% let headers2 = ['Title']; %>
      <% headers2.forEach(headerText => { %>
      <th scope="col"><%= headerText %></th>
      <% }); %>
    </thead>
    <tbody>
      <% listOfRequestsThemes.forEach(function(theme) { %>
      <tr class="table-light">
        <td><a href="/professor/theme/<%= theme.title %>"><%= theme.title %></a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
</div>
