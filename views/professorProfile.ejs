  <div class="name">
    <p class="lead mb-3"><strong>Name:  </strong><%= professor.name %></p>
  </div>
  <div class="surname">
    <p class="lead mb-3"><strong>Surname:  </strong> <%= professor.surname %></p>
  </div>
