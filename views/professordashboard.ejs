<p class="text-primary">All themes</p>
<form  action="/professor/search" method="POST">
        <input id= "search" name="searchText" class="form-control me-sm-2" type="text" placeholder="Search">
        <button type="submit" class="btn btn-primary">Search</button>
</form>


<table id="professorThemesTable" class="table table-hover">
  <thead>
    <% let headers = ['Title', 'Professor', 'Description']; %>
    <% headers.forEach(headerText => { %>
        <th scope="col"><%= headerText %></th>
    <% }); %>
  </thead>
  <tbody>
      <tr class="table-light">
        <% themes.forEach(function(theme) { %>
          <td><a href="/professor/theme/<%= theme.title %>"><%= theme.title %></a></td>
          <% professors.forEach(function (prof) { %>
            <%  if(prof._id.equals(theme.professor)) { %>
              <td><%= prof.name %></td>
            <% } %>
          <%  }); %>
        <td><%= theme.description  %></td>
          </tr>
    <% }); %>

  </tbody>
</table>

