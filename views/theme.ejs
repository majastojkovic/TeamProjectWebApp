<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">

      <h1 class="text-center mb-3">Theme Page</h1>

      <form action="/professor/approveTheme" method="POST">

        <div class="form-group">

          <dl class="dl-horizontal">

            <dt>Title: </dt>
            <dd><%= theme.title %></dd>

            <dt>Description: </dt>
            <dd><%= theme.description %></dd>

            <dt>Is Available: </dt>
            <dd><%= theme.isAvailable %></dd>

            <dt>Professor: </dt>
            <dd><%= professor.name %> <%= professor.surname %></dd>

            <dt>Expiry Date: </dt>
            <dd><%= theme.expiryDate %></dd>

          </dl>


          <% if ( user.role == "student") { %>
             <br>
             <a style="margin:10px" href="/student/studentHome">Go Back</a>
          <% } %>

          <% if ( user.email == professor.email && theme.teamApproved==null) { %>
          <%    if (teams.length == 0) { %>

          <%    } else { %>

                <h5>Teams Applied:</h5>

                  <% teams.forEach(function(team) { %>
                    <div class="form-check">
                      <input type="radio" class="form-check-input" name="checkedTeam" value="<%= team.name %>">
                      <label class="form-check-label" for="flexCheckDefault"><a href="/team/<%= team.name %>"><%= team.name %></a></label>
                    </div>
                  <% }); %>

                  <br>

                  <span>
                    <button type="submit" class="btn btn-primary">Approve</button>
                  </span>
           <%  } %>


            <% } %>

        </div>



      </form>

    </div>
  </div>
</div>
