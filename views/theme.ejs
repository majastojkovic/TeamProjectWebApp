<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">

      <h1 class="text-center mb-3">Theme Page</h1>

      <form action="/professor/approveTheme" method="POST">

        <div class="form-group">

          <dl class="dl-horizontal">

            <dt>Title: </dt>
            <dd><%= theme.title %></dd>

            <dt>Description: </dt>
            <dd><%= theme.description %></dd>

            <dt>Is Available: </dt>
            <dd><%= theme.isAvailable %></dd>

            <dt>Professor: </dt>
            <dd><%= professor.name %> <%= professor.surname %></dd>

            <dt>Expiry Date: </dt>
            <dd><%= theme.expiryDate %></dd>

          </dl>


          <% if ( user.email == professor.email && theme.teamApproved==null) { %>

          <h5>Teams Applied:</h5>

            <% teams.forEach(function(team) { %>
              <div class="form-check">
                <input type="radio" class="form-check-input" name="checkedTeam" value="<%= team.name %>,<%= theme.title %>">
                <label class="form-check-label" for="flexCheckDefault"><%= team.name %></label>
              </div>
            <% }); %>

            <br>

            <span>
              <a style="margin:10px" href="/professor/professorProfile">Go Back</a>
              <button type="submit" class="btn btn-primary">Approve</button>
            </span>

        </div>

        <% } %>

      </form>

    </div>
  </div>
</div>
